/**
 * Exclusive-or gate:
 * out = not (a == b)
 */

CHIP Xor {
    IN a, b;
    OUT out;

    PARTS:
    // (a or b) and not(a and b)
    Or(a=a, b=b, out=aOrb);
    And(a=a, b=b, out=aAndb);
    Not(in=aAndb, out=notaAndb);
    And(a=aOrb, b=notaAndb, out=out);
}